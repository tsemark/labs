apiVersion: v1
kind: Secret
metadata:
  name: aws-secret
  namespace: kube-system
type: Opaque
stringData:
  access-key-id: <AWS_ACCESS_KEY_ID>
  secret-access-key: <AWS_SECRET_ACCESS_KEY>
---
# Note: In production, use IAM roles instead of access keys
# This is only needed if you're not using IRSA (IAM Roles for Service Accounts)
# For kops, prefer using IAM instance profiles configured in Terraform

